<?xml version="1.0"?>
<config>
    <modules>
        <Upseller_Clouldsearch>
            <version>1.0.0</version>
        </Upseller_Clouldsearch>
    </modules>
     <global>
     	<helpers>
            <upseller_clouldsearch>
                <class>Upseller_Clouldsearch_Helper</class>
            </upseller_clouldsearch>
        </helpers>
        <blocks>
			<upseller_clouldsearch>
				<class>Upseller_Clouldsearch_Block</class>
			</upseller_clouldsearch>
		</blocks>
		<models>
			<upseller_clouldsearch>
				<class>Upseller_Clouldsearch_Model</class>
                <resourceModel>upseller_clouldsearch_resource</resourceModel>
			</upseller_clouldsearch>
            <upseller_clouldsearch_resource>
                <class>Upseller_Clouldsearch_Model_Resource</class>
                <entities>
                    <queue>
                        <table>upseller_clouldsearch_queue</table>
                    </queue>
                </entities>
            </upseller_clouldsearch_resource>
		</models>
        <resources>
            <upseller_clouldsearch_setup>
                <setup>
                    <module>Upseller_Clouldsearch</module>
                </setup>
            </upseller_clouldsearch_setup>
        </resources>
     </global>
     <adminhtml>
        <layout>
            <updates>
                <upseller_clouldsearch>
                    <file>upseller/clouldsearch.xml</file>
                </upseller_clouldsearch>
            </updates>
        </layout>
        <events>
            <!--<catalog_category_save_commit_after>
                <observers>
                    <catalog_category_save_commit_after_upseller>
                        <class>Upseller_Clouldsearch_Model_Observer</class>
                        <method>catalogCategorySaveAfter</method>
                    </catalog_category_save_commit_after_upseller>
                </observers>
            </catalog_category_save_commit_after>
            <catalog_product_save_after>
                <observers>
                    <catalog_product_save_after_upseller>
                        <class>Upseller_Clouldsearch_Model_Observer</class>
                        <method>catalogProductSaveAfter</method>
                    </catalog_product_save_after_upseller>
                </observers>
            </catalog_product_save_after> -->
            <catalog_controller_product_delete>
                <observers>
                    <catalog_controller_product_delete_observer>
                        <class>Upseller_Clouldsearch_Model_Observer</class>
                        <method>catalogControllerProductDelete</method>
                    </catalog_controller_product_delete_observer>
                </observers>
            </catalog_controller_product_delete>
            <controller_action_postdispatch_adminhtml_catalog_product_delete>
                <observers>
                    <controller_action_postdispatch_adminhtml_catalog_product_delete_observer>
                        <class>Upseller_Clouldsearch_Model_Observer</class>
                        <method>controllerActionPostdispatchAdminhtmlCatalogProductDelete</method>
                    </controller_action_postdispatch_adminhtml_catalog_product_delete_observer>
                </observers>
            </controller_action_postdispatch_adminhtml_catalog_product_delete>
            <catalog_controller_category_delete>
                <observers>
                    <catalog_controller_category_delete_observer>
                        <class>Upseller_Clouldsearch_Model_Observer</class>
                        <method>catalogControllerCategoryDelete</method>
                    </catalog_controller_category_delete_observer>
                </observers>
            </catalog_controller_category_delete>
            
        </events>
    </adminhtml>
    <frontend>
    	<layout>
            <updates>
                <upseller_clouldsearch>
                    <file>upseller/clouldsearch.xml</file>
                </upseller_clouldsearch>
            </updates>
        </layout>
        <events>
            <checkout_cart_save_after>
                <observers>
                    <checkout_cart_save_after_observer>
                        <class>Upseller_Clouldsearch_Model_Observer</class>
                        <method>checkoutCartSaveAfter</method>
                    </checkout_cart_save_after_observer> 
                </observers>
            </checkout_cart_save_after>
            <checkout_cart_product_add_after>
                <observers>
                    <checkout_cart_product_add_after_observer>
                        <class>Upseller_Clouldsearch_Model_Observer</class>
                        <method>cartProductAddAfter</method>
                    </checkout_cart_product_add_after_observer> 
                </observers>
            </checkout_cart_product_add_after>
            <checkout_cart_update_items_after>
                <observers>
                    <checkout_cart_update_items_after_observer>
                        <class>Upseller_Clouldsearch_Model_Observer</class>
                        <method>cartProductUpdateAfter</method>
                    </checkout_cart_update_items_after_observer> 
                </observers>
            </checkout_cart_update_items_after>
            <sales_quote_remove_item>
                <observers>
                    <sales_quote_remove_item_observer>
                        <class>Upseller_Clouldsearch_Model_Observer</class>
                        <method>salesQuoteRemoveItem</method>
                    </sales_quote_remove_item_observer>
                </observers>
            </sales_quote_remove_item>
            <checkout_submit_all_after>
                <observers>
                    <checkout_submit_all_after_observer>
                        <class>Upseller_Clouldsearch_Model_Observer</class>
                        <method>checkoutSubmitAllAfter</method>
                    </checkout_submit_all_after_observer>
                </observers>
            </checkout_submit_all_after>
            <controller_action_layout_generate_xml_before>
                <observers>
                    <controller_action_layout_generate_xml_before_addjs>
                        <class>Upseller_Clouldsearch_Model_Observer</class>
                        <method>addJsCss</method>
                    </controller_action_layout_generate_xml_before_addjs>
                </observers>
            </controller_action_layout_generate_xml_before>
        </events>
    </frontend>

    
    <crontab>
        <jobs>
            <upseller_clouldsearch_cron_synchronization>
                <schedule>
                    <cron_expr>0-15 1 * * *</cron_expr>
                </schedule>
                <run>
                    <model>upseller_clouldsearch/observer::cronSynchronization</model>
                </run>
            </upseller_clouldsearch_cron_synchronization>
            <upseller_clouldsearch_cron_runsynchronization>
                <schedule>
                    <cron_expr>*/3 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>upseller_clouldsearch/observer::runCronSynchronization</model>
                </run>
            </upseller_clouldsearch_cron_runsynchronization>
        </jobs>
    </crontab>

    <admin>
        <routers>
              <clouldsearch>
                <use>admin</use>
                    <args>
                      <module>Upseller_Clouldsearch</module>
                      <frontName>clouldsearch</frontName>
                    </args>
              </clouldsearch>
        </routers>
    </admin>

	
    <default>
	    <upseller_clouldsearch>
	    	<settings>
	    		<active>1</active>
                <active_quicksearch>1</active_quicksearch>
                <active_advance>0</active_advance>
                <syncrobatch>5</syncrobatch>
                <searchdomain>upsellerapp.com</searchdomain>
                <subdomain>salectosearch</subdomain>
	    	</settings>
	    </upseller_clouldsearch>
    </default>


</config>    